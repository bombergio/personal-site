---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SEO } from 'astro-seo';
import '../styles/main.css';

export interface Props {
  title: string;
  description: string;
  mainClass: string;
  ogImage?: string;
  ogImageAlt?: string;
}

const { title, description, mainClass, ogImage, ogImageAlt } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/prism.css">
		<meta name="generator" content={Astro.generator} />
		<SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: ogImage || '/favicon.svg',
        },
        image: {
          alt: ogImageAlt || title,
        }
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
      }}
    />
	</head>
	<body class="flex flex-col mx-auto my-auto max-w-3xl px-2 sm:px-5 xl:max-w-3xl xl:px-0 min-h-screen w-screen text-zinc-800 bg-orange-50 dark:bg-slate-900 dark:text-zinc-300">
    <Header />
    <main class={mainClass}>
      <slot />
    </main>
    <Footer />
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "259e45502c404d948d94a9ffb4922c72"}'></script>
  </body>
</html>
<script>
  import '../scripts/menu.js';
</script>
