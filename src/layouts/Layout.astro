---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SEO } from 'astro-seo';
import '../styles/main.css';

export interface Props {
  title: string;
  description: string;
  mainClass: string;
}

const { title, description, mainClass } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/prism.css">
		<meta name="generator" content={Astro.generator} />
		<SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: {title},
          type: 'website',
          image: '/favicon.svg',
        },
        image: {
          alt: 'Website Logo',
        }
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
      }}
    />
	</head>
	<body class="text-zinc-800 bg-orange-50 dark:bg-slate-900 dark:text-zinc-300 mx-auto my-auto max-w-3xl px-2 sm:px-5 xl:max-w-3xl xl:px-0 flex flex-col min-h-screen w-screen">
    <Header />
    <main class={mainClass}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<script>
  import '../scripts/menu.js';
</script>
