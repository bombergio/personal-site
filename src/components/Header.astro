---
import ThemeIcon from '../components/ThemeIcon.astro';
---
<header class="flex justify-between md:justify-end md:align-left px-4 py-6 lg:py-8 md:px-24 lg:px-8">
  <div class="order-last md:hidden">
    <div class="hamburger">
      <svg xmlns="http://www.w3.org/2000/svg" id="hamburger-icon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        <path class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4 4 16,16 M4 20 20,4"/>
      </svg>
    </div>
  </div>
  <nav class="absolute left-1/2 transform -translate-x-1/2">
    <ul class="flex items-center hidden space-x-8 md:flex">
      <li><a href="/" aria-label="Home" title="Home" class="font-medium tracking-wide transition-colors duration-200 hover:text-teal-accent-400">Home</a></li>
      <li><a href="/blog" aria-label="Blog" title="Blog" class="font-medium tracking-wide transition-colors duration-200 hover:text-teal-accent-400">Blog</a></li>
    </ul>
  </nav>
  <div class="order-first">
    <ThemeIcon />
  </div>
  <div class="nav-links fixed w-full h-full top-24 right-0 bg-gray-400 dark:bg-gray-800 opacity-95 z-10 transform ease-in-out duration-300 translate-x-0 hidden">
    <button type="button" aria-label="toggle mobile modal" class="hamburger fixed w-full h-full cursor-auto focus:outline-none"></button>
    <nav class="fixed h-full mt-8">
      <div class="px-12 py-4">
        <a class="text-2xl font-bold tracking-widest text-gray-900 dark:text-gray-100" href="/">Home</a>
      </div>
      <div class="px-12 py-4">
        <a class="text-2xl font-bold tracking-widest text-gray-900 dark:text-gray-100" href="/blog">Blog</a>
      </div>
    </nav>
  </div>
</header>
